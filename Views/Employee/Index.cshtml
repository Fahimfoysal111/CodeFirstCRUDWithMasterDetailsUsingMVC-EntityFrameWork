@model IEnumerable<Code2.Models.Employee>
@{
    ViewBag.Title = "Employee Management";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Employee Management</h2>

    <!-- Add Employee Button -->
    <div class="text-end mb-3">
        <a href="@Url.Action("Create", "Employee")" class="btn btn-success">+ Add New Employee</a>
    </div>
        @foreach (var a in Model)
        {
            <div class="card mb-4 shadow-sm">
                <!-- Employee Info -->
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <img src="@a.Picture" alt="Employee Picture" class="rounded-circle me-3" style="width: 50px; height: 50px;">
                    <div>
                        <h5 class="mb-0">@a.EmployeeName</h5>
                        <small>Employee ID: @a.EmployeeId</small>
                    </div>
                    <div class="ms-auto">
                        <a href="@Url.Action("Edit", "Employee", new { id = a.EmployeeId })" class="btn btn-warning btn-sm me-2">Edit</a>
                        <a href="@Url.Action("Delete", "Employee", new { id = a.EmployeeId })" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
           <!-- Project Assignments -->
                <div class="card-body">
                    <h6 class="mb-3">Project Assignments</h6>
                    
                        <table class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Project ID</th>
                                    <th>Project Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in a.ProjectAssignments)
                                {
                                    <tr>
                                        <td>@item.ProjectId</td>
                                        <td>@item.Project.ProjectName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                </div>
            </div>
        }
</div>
