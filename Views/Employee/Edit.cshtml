@model Code2.Models.Vm.EmployeeVM
@{
    ViewBag.Title = "Edit";
}
<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Employee</h2>

    @using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(X => X.EmployeeId)

        <div class="mb-3">
            @Html.LabelFor(x => x.EmployeeName, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control", placeholder = "Enter employee name" })
            @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(x => x.Age, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.Age, new { @class = "form-control", placeholder = "Enter employee age" })
            @Html.ValidationMessageFor(x => x.Age, "", new { @class = "text-danger" })
        </div>

        <div class="form-check mb-3">
            @Html.CheckBoxFor(x => x.EmployeeActive, new { @class = "form-check-input", id = "EmployeeActive" })
            @Html.LabelFor(x => x.EmployeeActive, new { @class = "form-check-label" })
            @Html.ValidationMessageFor(x => x.EmployeeActive, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(x => x.DateOfJoining, new { @class = "form-label" })
            @Html.TextBox("DateOfJoining", Model.DateOfJoining.ToString("yyyy-MM-dd"), new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(x => x.DateOfJoining, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(x => x.PictureFile, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.PictureFile, new { @class = "form-control", type = "file" })
            <img src="@Model.Picture" alt="Employee Picture" class="mt-2" style="height: 50px; width: 50px;" />
            @Html.ValidationMessageFor(x => x.PictureFile, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <a href="#" id="addmore" class="btn btn-primary">Add Project</a>
            <div id="container">
                @foreach (var a in Model.ProjectAssignments)
                {
                    @Html.Action("AddNewProject", "Employee", new { id = a.Project.ProjectId })
                }
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success px-4">Save</button>
            <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary px-4">Back to Index</a>
        </div>
    }
</div>



